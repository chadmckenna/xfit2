- title "Sign in"
.row
  .span12
    .btn-header
      = render "links"
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %div
    = f.label :email
    = f.email_field :email
  %div
    = f.label :password
    = f.password_field :password
  %div= f.submit "Sign in", :class => "btn btn-large btn-primary"
