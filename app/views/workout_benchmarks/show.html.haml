- title "Workout Benchmark"
.row
  .span12
    .left.btn-header
      = link_to "All Benchmarks", workout_benchmarks_path, :class => "btn btn-large"
      = link_to "All Workouts", workouts_path, :class => "btn btn-large"
    .right
      = link_to "Add Score", new_workout_score_path(@workout_benchmark.workout), :class => "btn btn-large btn-primary"
.row
  .span10
    %h2#title= @workout_benchmark.workout.name
    %p= simple_format @workout_benchmark.workout.workout
- unless has_recent_scores?(current_user, @workout_benchmark)
  .row
    .span12
      %table.scores.table.table-bordered.table-striped
        %thead
          %tr
            - for score in @scores
              %th{:scope => "col"}= score.created_at.to_s(:long)
        %tbody
          %tr
            - for score in @scores
              %td{:scope => "col"}= score.to_parsed_score