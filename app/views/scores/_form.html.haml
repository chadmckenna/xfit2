.row
  .span12
    = form_for @score, :html => {:class => 'form-horizontal well'} do |f|
      = f.error_messages
      = f.hidden_field :workout_id, :value => (@workout ? @workout.id : @score.workout_id)
      %fieldset
        .control-group
          = f.label :score, :class => "control-label"
          .controls
            = f.text_area :score, :rows => "12", :style => "width: 95%;"
            %p.help-block
              You can use the '#' in front of a weight to tag it. All times in the format 00:00 will automatically get pulled.
        .form-actions
          = f.submit :class => "btn-success"
          = link_to "Cancel", workouts_path, :class => "btn"
